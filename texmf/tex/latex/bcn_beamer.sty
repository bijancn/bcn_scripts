\RequirePackage[utf8]{inputenc}
\RequirePackage{relsize}             % Allows to use relative sizes
\RequirePackage{siunitx}             % Correct typesetting of units
\RequirePackage{simplewick}          % Wick contractions
\RequirePackage{slashed}             % The almighty slash-notation
\RequirePackage{bbm}                 % $\mathbbm{N}$ -> |N, etc.
\RequirePackage{booktabs}            % Pretty tables. Use \toprule,
                                     % \midrule and \bottomrule
\RequirePackage{environ}             % Allows to use \NewEnviron
\RequirePackage[right]{eurosym}      % The infamous Euro symbol
\RequirePackage{transparent}         % \transparent{0.5} -> 50 % transparency
\RequirePackage{listings}            % For code listings

% ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ BEAMER COLORS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 

\RequirePackage{bcn_color}

% \fstcol and \sndcol has to be set in document
\setbeamercolor{title}{fg=\sndcol}
\setbeamercolor{frametitle}{fg=\fstcol, bg=\mygray}
\setbeamercolor{block title}{fg=\fstcol, bg=\mygray}
\setbeamercolor{item}{fg=\sndcol}
\setbeamercolor{enumerate item}{fg=\sndcol}
\setbeamercolor{alerted text}{fg=\sndcol}
\setbeamercolor{section in toc}{fg=\sndcol}
\setbeamercolor{caption name}{fg=\sndcol}
\setbeamercolor{description item}{fg=black}
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{example text}{fg=black}
\setbeamercolor{bibliography entry author}{fg =\sndcol}
\setbeamercolor{bibliography entry note}{fg =\sndcol}
\setbeamercolor{bibliography entry location}{fg =\sndcol!60!white}

% ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ COMMANDS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 

\RequirePackage{bcn_commands}

\newcommand\scite[1]{\alert{\scriptsize #1}} 
\newcommand\os\onslide
\newcommand\al\alert

\NewEnviron{Balign}{
  \begin{align*}
    \BODY
  \end{align*}
}

% \animation has to be set in document, e.g. to \transdissolve or {}
\NewEnviron{Bframe}[2][]{
  \begin{frame}{#2}{#1}
    \animation
    \BODY
  \end{frame}
}

\newcommand{\beamersection}[1]{
  \section{#1}
  \begin{frame} \animation
    \centering \huge \textcolor{\sndcol}{#1}
  \end{frame}
}

