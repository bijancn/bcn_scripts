dnl
dnl  Usage: e.g. make 2>&1 | colorit
dnl
dnl  Define some useful color variables
dnl
define(`black', `0')
define(`red', `1')
define(`green', `2')
define(`brown', `3')
define(`blue', `4')
define(`magenta', `5')
define(`cyan', `6')
define(`white', `7')
dnl
dnl  Mark macro arguments: regexp foreground-color [background-color]
dnl
define(`mark', ``mark "$1"'' `ifelse(`$#', `3', ``"\033[3$2;4$3m"'',
``"\033[3$2m"'')' `"\033[m"')
dnl
divert
mark(`warning', magenta)
mark(`overfull', magenta)
mark(`Overfull', magenta)
mark(`underfull', magenta)
mark(`Traceback', magenta)
mark(`Underfull', magenta)
mark(`Warning', magenta)
mark(` error', red)
mark(`Error', red)
mark(`XFAIL', green)
mark(`FAIL', red)
mark(`ERROR', red)
mark(`unescaped', red)
mark(`gcc', green)
mark(`jar', green)
mark(`javac', green)
mark(`mkdir', green)
mark(`copy', green)
mark(`echo', green)
mark(`gfortran', green)
mark(`notangle', green)
mark(` sed', green)
mark(`make', green)
mark(`ok', green)
mark(`OK', green)
mark(`PASS', green)
mark(`(File | line | characters | in )', blue)
mark(`No such file or directory', brown)
