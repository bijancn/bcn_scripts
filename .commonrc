prcomments() {
    # Get PR number - either from argument or current branch
    local pr_num=${1:-$(gh pr view --json number -q .number 2>/dev/null)}
    
    if [ -z "$pr_num" ]; then
        echo "âŒ No PR found for current branch and no PR number provided"
        echo "Usage: prcomments [PR_NUMBER]"
        return 1
    fi
    
    echo "ðŸ“‹ PR #$pr_num Comments:"
    echo "========================"
    
    echo -e "\nðŸ’¬ General Comments:"
    gh api repos/:owner/:repo/issues/$pr_num/comments --jq '.[] | "  " + .user.login + ": " + .body' 2>/dev/null || echo "  (none)"
    
    echo -e "\nðŸ“ Code Review Comments:"
    gh api repos/:owner/:repo/pulls/$pr_num/comments --jq '.[] | "  " + .user.login + " (" + .path + ":" + (.line//empty|tostring) + "): " + .body' 2>/dev/null || echo "  (none)"
}

diffmain() {
    # Determine the main branch (prefer main, fallback to master)
    if git rev-parse --verify origin/main >/dev/null 2>&1; then
        local main_branch="origin/main"
    else
        local main_branch="origin/master"
    fi

    echo "Carefully review the current PR and check for any important issues before this is merged to main"
    echo "----------------------------"
    echo "Overall diff stats (git diff --stat $main_branch...HEAD)"
    git diff --stat $main_branch...HEAD -- ':(exclude)package-lock.json'
    echo "----------------------------"
    echo "Actual git diff (git diff --word-diff --unified=3 $main_branch...HEAD)"
    git diff --word-diff --unified=3 $main_branch...HEAD -- ':(exclude)package-lock.json' | cat
    echo "----------------------------"
}
